{
	"name": "super-8",
	"dockerComposeFile": [
		"./docker-compose.yml" // the docker compose file that we want to run
	],
	"service": "super8-dev-env",
	"workspaceFolder": "/workspaces",
	"postCreateCommand": ". /workspaces/.devcontainer/dev-init.sh",
	"shutdownAction": "stopCompose"
}
