  "packageManager": "pnpm@8.10.0",
  "scripts": {
    "core": "pnpm --filter core $@",
    "docs": "pnpm --filter docs $@",
    "exts": "pnpm --filter exts $@",
    "web": "pnpm --filter web $@",
    "dev-info": "md docs/dev-info.md",
    "lint": "pnpm eslint .",
    "test": "pnpm core test && pnpm web test",
    "svelte-check": "pnpm core check && pnpm web check && pnpm run exts check",
    "build-web": "turbo build --filter=core --filter=web",
    "push-main": "git add . && pnpm co && git push -f origin main",
    "co": "cz",
    "prepare": "husky install .dev/husky"
  },
