      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".dev/cz-config.cjs"
    }
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ]
    }
  },
  "scripts": {
    "core": "pnpm --filter core $@",
    "core-react": "pnpm --filter core-react $@",
    "docs": "pnpm --filter docs $@",
    "exts": "pnpm --filter exts $@",
    "web": "pnpm --filter web $@",
    "dev-info": "md docs/dev-info.md",
    "dev-exts": "turbo dev --filter=core --filter=exts",
    "dev-web": "turbo dev --filter=core --filter=web --filter=docs",
    "build-exts": "turbo build --filter=core --filter=exts",
    "build-web": "turbo build --filter=core --filter=web --filter=docs",
    "push-main": "git add . && pnpm cm && git push -f origin main",
    "push-dev": "git add . && pnpm cm && git push -f origin development",
    "publish-npm": "turbo run build lint test --filter=core --filter=core-react && changeset version && changeset publish",
    "cm": "cz",
    "prepare": "husky install .dev/husky",
    "lint": "pnpm eslint .",
    "test": "pnpm core test && pnpm web test",
    "svelte-check": "pnpm core check && pnpm web check && pnpm run exts check"
  },
  "devDependencies": {
