{
  "name": "@s-8/exts",
  "description": "Super8 browser extensions",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:chrome",
    "dev:chrome": "rimraf dist/chrome && pnpm build:chrome && run-p dev:chrome:*",
    "dev:chrome:vite": "TARGET=chrome vite",
    "dev:chrome:web-ext": "web-ext run -t chromium --no-reload --source-dir ./dist/chrome",
    "dev:firefox": "rimraf dist/firefox && run-s build:firefox && run-p dev:firefox:*",
    "dev:firefox:vite": "TARGET=firefox vite",
    "dev:firefox:web-ext": "web-ext run -t firefox-desktop --no-reload --source-dir ./dist/firefox",
    "build": "rimraf dist && run-p build:* && pnpm zip",
    "build:chrome": "NODE_ENV=production TARGET=chrome vite build",
    "build:firefox": "NODE_ENV=production TARGET=firefox vite build",
    "zip": "node zip.js",
    "watch:chrome": "NODE_ENV=development TARGET=chrome vite build --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@s-8/core": "0.0.3",
    "@types/chrome": "0.0.243",
    "@types/webextension-polyfill": "^0.10.5",
    "flowbite": "^1.8.1",
    "flowbite-svelte": "^0.39.3",
    "vite-plugin-web-extension": "^3.2.0",
    "webextension-polyfill": "^0.10.0",
    "zip-a-folder": "^2.0.2"
  },
  "extra": {
    "devServerPort": "5173"
  },
  "webExt": {
    "run": {
      "startUrl": [
        "https://www.youtube.com/watch?v=UN1hu4e-VmM",
        "https://www.twitch.tv/",
        "https://www.filmin.es/",
        "https://vimeo.com",
        "https://www.disneyplus.com/",
        "https://www.netflix.com/",
        "chrome://extensions/"
      ],
      "devtools": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pigeonposse/super8/packages/exts"
  },
  "author": {
    "name": "Angelo",
    "email": "angelo@pigeonposse.com",
    "url": "https://pigeonposse.com"
  }
}